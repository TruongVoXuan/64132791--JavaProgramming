<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="truongvx.client.LoginApp"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">
    <TextField fx:id="usernameField" promptText="Tên đăng nhập" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Đăng Nhập" onAction="#handleLogin" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
</GridPane>

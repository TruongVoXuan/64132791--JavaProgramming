<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="truongvx.cau3.QuizGameController">
  <padding><Insets bottom="20" left="20" right="20" top="20"/></padding>

  <Label text="Point:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
  <Label fx:id="pointLabel" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

  <Label text="Timer:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
  <Label fx:id="timerLabel" text="30" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <Label text="Question:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
  <Label fx:id="questionLabel" text="Question" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

  <Button fx:id="answerButton1" text="Answer 1" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
  <Button fx:id="answerButton2" text="Answer 2" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
  <Button fx:id="answerButton3" text="Answer 3" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
  <Button fx:id="answerButton4" text="Answer 4" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

  <Button fx:id="generateQuestionButton" text="Generate Question" GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
</GridPane>
